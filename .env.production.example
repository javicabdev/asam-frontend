# Variables de entorno para producción
# Copiar este archivo como .env.production y configurar los valores reales

# API Backend
VITE_GRAPHQL_URI=https://api.asam.org/graphql
VITE_GRAPHQL_WS_URI=wss://api.asam.org/graphql

# Configuración de la App
VITE_APP_NAME=ASAM
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Sistema de Gestión ASAM"

# URLs públicas
VITE_PUBLIC_URL=https://asam.netlify.app

# Features flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false

# Configuración de autenticación
VITE_AUTH_TOKEN_KEY=asam_access_token
VITE_AUTH_REFRESH_TOKEN_KEY=asam_refresh_token
VITE_AUTH_USER_KEY=asam_user

# Timeout de inactividad (en minutos)
VITE_IDLE_TIMEOUT_MINUTES=15
VITE_IDLE_WARNING_MINUTES=2

# Configuración de i18n
VITE_DEFAULT_LANGUAGE=es
VITE_AVAILABLE_LANGUAGES=es,en

# Configuración de caché
VITE_CACHE_VERSION=v1
VITE_ENABLE_OFFLINE=true

# Analytics (si se usa)
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# Configuración de desarrollo (no usar en producción)
VITE_MOCK_API_DELAY=0
